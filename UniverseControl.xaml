<UserControl x:Class="SMT.UniverseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SMT"
             xmlns:skv="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             mc:Ignorable="d" 
             xmlns:zoombox1="clr-namespace:WpfHelpers.WpfControls.Zoombox;assembly=WpfHelpers"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <zoombox1:ZoomControl x:Name="UniverseZoomControl" MinZoom="0.2" MaxZoom="20" >
            <Canvas x:Name="UniverseMainCanvas" Margin="5" Width="8000" Height="8000" UseLayoutRounding="True">
            </Canvas>
        </zoombox1:ZoomControl>
    </Grid>
</UserControl>
